/* pages/change/change.wxss */

.container {
  background: #f8f8f8;
}

.lang-list {
  display: flex;
  flex-direction: column;
}

.title {
  background-color: #fff;
  border-bottom: 1px solid #ececec;
  padding: 20rpx 40rpx;
  color: #aaa;
  font-size: 28rpx;
}

.item {
  background-color: #fff;
  padding-left: 40rpx;
}

.item-inner {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ececec;
  padding: 20rpx 40rpx 20rpx 0;
}

.item .txt {
  flex: 1;
}

.item .iconfont {
  margin-left: auto;
  color: #aaa;
}
