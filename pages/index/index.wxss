/**index.wxss**/

.change {
  color: #8995a1;
  font-size: 24rpx;
  padding: 20rpx 40rpx;
}

.change .icon-down {
  color: #8995a1;
  font-size: 22rpx;
}

.input-area {
  position: relative;
}

.textarea-wrap {
  background: #fff;
  border-bottom: 1px solid #c7cee0;
}

.input-area textarea {
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}

.input-area .icon-close {
  position: absolute;
  top: 20rpx;
  right: 12rpx;
  z-index: 1;
  font-size: 40rpx;
  color: #888;
}

.input-area .text-area {
  min-height: 80rpx;
  padding: 40rpx;
  background-color: #fff;
}

.input-area .text-title {
  font-size: 28rpx;
  color: #8995a1;
}

.input-area .text-result {
  padding: 20rpx 0;
}
